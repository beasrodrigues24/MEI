			<label kind="assignment" x="357" y="-93">x:=0</label>
		</transition>
		<transition>
			<source ref="id2"/>
			<target ref="id1"/>
			<label kind="guard" x="51" y="136">x &gt;= 5</label>
			<label kind="synchronisation" x="51" y="153">land[id]!</label>
